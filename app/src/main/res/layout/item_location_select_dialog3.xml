<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:background="@drawable/shape_white_12_15"
        android:layout_width="match_parent"
        android:layout_height="309dp"
        android:layout_alignParentBottom="true">


        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="取消"
            android:textColor="@color/textcolor9"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingTop="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="10dp"
            android:text="确认"
            android:textColor="@color/textcolor3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text=""
            android:textColor="@color/textcolor3"
            android:textSize="16sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCancel">


            <View
                android:background="@drawable/shape_hui_5_8"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_centerVertical="true"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll1"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.contrarywind.view.WheelView
                        android:id="@+id/wheeviewProvince"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.contrarywind.view.WheelView
                        android:id="@+id/wheeviewCity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll3"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <com.contrarywind.view.WheelView
                        android:id="@+id/wheeviewDistinguish"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>